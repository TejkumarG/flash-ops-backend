# ============================================================
# APPLICATION SETTINGS
# ============================================================
APP_NAME=Flash-Ops NL2SQL
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# ============================================================
# MONGODB DATABASE
# ============================================================
# For Docker: mongodb://mongodb:27017
# For Local: mongodb://localhost:27017
MONGO_URI=mongodb://localhost:27017
MONGO_DB_ID=6919f70d1e144e4ea1b53ff4
MONGO_DB_NAME=flash-ops
MONGO_COLLECTION=databases

# ============================================================
# MILVUS VECTOR DATABASE
# ============================================================
# For Docker: milvus
# For Local: localhost
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_COLLECTION_NAME=table_embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
VECTOR_SEARCH_TOP_K=30

# ============================================================
# MINIO OBJECT STORAGE
# ============================================================
# For Docker: minio:9000
# For Local: localhost:9000
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=query-results
MINIO_SECURE=false

# ============================================================
# OPENAI API (Temporary - will be removed)
# ============================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
MAX_REFLECTION_ATTEMPTS=3
TEMPERATURE_START=0.1
TEMPERATURE_INCREMENT=0.05

# ============================================================
# VECTOR SEARCH & TABLE SELECTION
# ============================================================
CLUSTERING_SIMILARITY_THRESHOLD=0.75
SINGLE_TABLE_SCORE_GAP=0.2
MAX_TABLES_PER_QUERY=3
EMBEDDING_BATCH_SIZE=1000

# ============================================================
# QUERY RESULTS & EXPORTS
# ============================================================
MAX_RESULT_ROWS_IN_RESPONSE=10
RESULT_FORMATTER_THRESHOLD=5
CSV_EXPORT_PATH=data/exports/

# ============================================================
# SECURITY & ENCRYPTION
# ============================================================
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=e7aec6ccea37c099742016e55bc8c9b7a3e7eb8e929daacaf371be28c06d874e

# ============================================================
# LOGGING
# ============================================================
LOG_LEVEL=INFO
LOG_PATH=data/logs/
